vagrantfile:
    vm:
        provider:
            local:
                machines:
                    machine1:
                        id: website-front1
                        hostname: website.puppet
                        network:
                            private_network: 192.168.X.X
                            forwarded_port:
                                port1:
                                    host: 'XXXX'
                        memory: '2048'
                        cpus: '2'
        synced_folder:
            folder1:
                source: ../website
                target: /var/www/website
                sync_type: nfs
                rsync:
                    exclude:
                        - .idea/
server:
    packages:
        - bash-completion
        - htop
        - vim
        - zip
        - unzip
locale:
    settings:
        timezone: Europe/Paris
nginx:
    upstreams:
        phpfastcgi:
            name: phpfastcgi
            upstream_fail_timeout: 10s
            members:
                - '127.0.0.1:9000'
    vhosts:
        vhost1:
            server_name: website.local
            server_aliases:
                - www.website.local
            www_root: /var/www/website
            locations:
                php_html:
                    www_root: /var/www/website
                php_php:
                    www_root: /var/www/website
                    fastcgi: phpfastcgi
                sf2_3_base:
                    www_root: /var/www/website/web
                sf2_3_dev:
                    www_root: /var/www/website/web
                    fastcgi: phpfastcgi
                sf2_3_prod:
                    www_root: /var/www/website/web
                    fastcgi: phpfastcgi
                sf4_base:
                    www_root: /var/www/website/public
                sf4_index:
                    www_root: /var/www/website/public
                    fastcgi: phpfastcgi
                wp_favicon:
                    www_root: /var/www/website
                wp_robots:
                    www_root: /var/www/website
                wp_base:
                    www_root: /var/www/website
                wp_php:
                    www_root: /var/www/website
                    fastcgi: phpfastcgi
                wp_media:
                    www_root: /var/www/website
letsencrypt:
    install: '0'
php:
    modules:
        php:
            - cli
            - intl
            - fpm
            - common
            - readline
            - curl
            - imap
            - gd
            - mbstring
            - memcached
            - mysql
            - xml
    ini:
        date.timezone: Europe/Paris
        short_open_tag: 'off'
        magic_quotes_gpc: 'off'
        register_global: 'off'
        register_globals: 'off'
        session.auto_start: 'off'
xdebug:
    install: '1'
mariadb:
    settings:
        root_password: '123'
    users:
        user1:
            name: dbuser
            password: '123'
    databases:
        database1:
            name: dbname
            sql: ''
    grants:
        grant1:
            user: dbuser
            table: 'dbname.*'
            privileges:
                - ALL
mailhog:
    install: '1'
